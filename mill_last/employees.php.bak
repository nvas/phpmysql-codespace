<?php include 'includes/header.php'; 

// Handle form submission
if ($_SERVER['REQUEST_METHOD'] == 'POST') {
    // Validate inputs
    $required = ['username', 'password', 'name', 'hire_date', 'salary', 'role'];
    foreach ($required as $field) {
        if (empty($_POST[$field])) {
            $error = "يرجى ملء جميع الحقول المطلوبة";
            break;
        }
    }

    if (!isset($error)) {
        // Hash password
        $passwordHash = password_hash($_POST['password'], PASSWORD_DEFAULT);
        
        // Insert into database
        $stmt = $pdo->prepare("INSERT INTO employees 
            (username, password, name, address, phone, hire_date, salary, loans, incentives, role) 
            VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?, ?)");
        
        $stmt->execute([
            $_POST['username'],
            $passwordHash,
            $_POST['name'],
            $_POST['address'],
            $_POST['phone'],
            $_POST['hire_date'],
            $_POST['salary'],
            $_POST['loans'] ?? 0,
            $_POST['incentives'] ?? 0,
            $_POST['role']
        ]);
        
        header('Location: employees.php');
        exit;
    }
}
?>

